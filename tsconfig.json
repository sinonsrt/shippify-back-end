{
  "compilerOptions": {
    "target": "es2016",          
    "module": "commonjs",                     
    "rootDir": "./",    
    "baseUrl": "./src",     
    "esModuleInterop": true,  
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,        
    "resolveJsonModule": true,  
    "outDir": "./dist",   
    "forceConsistentCasingInFileNames": true,  
    "strict": false,            
    "strictPropertyInitialization": false,  
    "skipLibCheck": true               
  }
}
